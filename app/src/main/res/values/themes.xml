<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookkeeping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- enable window content transitions 开启过度-->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryVariant">@color/app_main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Bookkeeping.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Bookkeeping.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>